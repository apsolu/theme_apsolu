{{!
    @template theme_apsolu/publicpage

    Template Moodle pour afficher des pages publiques personnalis√©s.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * public_page_heading
    * public_page_content

    Example context (json):
    {
    }
}}
<main id="apsolu-page" role="main">
    <section id="public-page" class="apsolu-pages">
        <article class="apsolu-article mb-0">
            {{#public_page_heading}}
                <header class="apsolu-article-title">
                    <h2 class="container display-4">
                        <i aria-hidden="true" class="fa fa-chevron-circle-right mr-3"></i>
                        {{{ public_page_heading }}}
                    </h2>
                </header>
            {{/public_page_heading}}
            <section class="container-md p-3">
                {{{ public_page_content }}}
            </section>
        </article>
    </section>
</main>

