{{!
    @template theme_apsolu/components/footer_light

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * nav_link_1_url
    * nav_link_2_url
    * nav_link_3_url
    * nav_link_1_text
    * nav_link_2_text
    * nav_link_3_text
    * output - The core renderer for the page

    Example context (json):
    {
        "nav_link_1_url": "https://perdu.com/",
        "nav_link_1_text": "Vous êtes perdus ?",
        "nav_link_2_url": "https://univ-rennes2.fr/",
        "nav_link_2_text": "Université Rennes 2",
        "nav_link_3_url": "",
        "nav_link_3_text": ""
    }
}}
<footer id="apsolu-custom-footer-1" class="section text-light bg-dark mt-auto">
    <div class="container-fluid">
        {{! Pied de page personnalisé }}
        <div class="row mt-3 justify-content-md-center align-items-center">
            {{! Liens hypertexte }}
            <div class="col-12">
                <ul class="nav flex-column flex-md-row justify-content-md-center align-items-center">
                    {{#nav_link_1_text}}
                    <li class="nav-item"><a class="nav-link py-1 py-md-0 px-0 px-md-3" href="{{ nav_link_1_url }}">{{ nav_link_1_text }} <i class="fa fa-external-link" aria-hidden="true"></i></a></li>
                    {{/nav_link_1_text}}
                    {{#nav_link_2_text}}
                    <li class="nav-item"><a class="nav-link py-1 py-md-0 px-0 px-md-3" href="{{ nav_link_2_url }}">{{ nav_link_2_text }} <i class="fa fa-external-link" aria-hidden="true"></i></a></li>
                    {{/nav_link_2_text}}
                    {{#nav_link_3_text}}
                    <li class="nav-item"><a class="nav-link py-1 py-md-0 px-0 px-md-3" href="{{ nav_link_3_url }}">{{ nav_link_3_text }} <i class="fa fa-external-link" aria-hidden="true"></i></a></li>
                    {{/nav_link_3_text}}
                </ul>
            </div>
        </div>
        <hr class="my-0">
        {{! Navigation : fenêtes modales }}
        <div class="row row-cols-3 modal-container justify-content-center py-3">
            {{!accessibility_doc_text}}
                <div class="col-12 col-md-3">
                    {{! Redirection au niveau du vhost => /theme/apsolu/documents/public/accessibility.php }}
                    <a class="modal-inner" href="{{ accessibility_doc_url }}">
                    {{ accessibility_status }}
                    </a>
                </div>
            {{!accessibility_doc_text}}
            {{#legal_notice_doc_text}}
                <div class="col-12 col-md-3">
                    {{! Redirection au niveau du vhost => /theme/apsolu/documents/public/legal_notice.php }}
                    <a class="modal-inner" href="{{ legal_notice_doc_url }}">{{#str}}
                        legal_notice, theme_apsolu{{/str}}</a>
                </div>
            {{/legal_notice_doc_text}}
            {{#confidential_doc_text}}
                <div class="col-12 col-md-3">
                    {{! Redirection au niveau du vhost => /theme/apsolu/documents/public/confidential.php }}
                    <a class="modal-inner" href="{{ confidential_doc_url }}">{{#str}}
                        confidential, theme_apsolu{{/str}}</a>
                </div>
            {{/confidential_doc_text}}
            {{#contact_doc_text}}
                <div class="col-12 col-md-3">
                    {{! Redirection au niveau du vhost => /theme/apsolu/documents/public/contact.php }}
                    <a class="modal-inner" href="{{ contact_doc_url }}">{{#str}}
                        contact_us, theme_apsolu{{/str}}</a>
                </div>
            {{/contact_doc_text}}
        </div>
    </div>
</footer>
