{{!
    @template theme_apsolu/homepage

    Template Moodle pour afficher la page d'accueil personnalisée.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * count_activities
    * sitename - The name of the site
    * dashboard_link
    * login_link
    * section1_text
    * section1_image_credits
    * sites
        * id
        * name
    * activities
        * id
        * name
    * section2_image_credits
    * section3_text
    * section3_image_credits
    * institutional_account_url
    * non_institutional_account_url
    * legal_notice_doc_text
    * confidential_doc_text
    * contact_doc_text

    Example context (json):
    {
        "sitename": "",
        "count_activities": "0",
        "dashboard_link": "",
        "login_link": "",
        "section1_text": "",
        "section1_image_credits": "",
        "sites": [],
        "activities": [],
        "section2_image_credits": "",
        "section3_text": "",
        "section3_image_credits": "",
        "institutional_account_url": "",
        "non_institutional_account_url": "",
        "legal_notice_doc_text": "",
        "confidential_doc_text": "",
        "contact_doc_text": ""
    }
}}

{{! En-tête }}
{{! Menu 2 : Navigation }}
<div id="apsolu-page">
    {{! Section 1 : accueil }}
    <section id="accueil" class="apsolu-pages">
        <span id="section-1" class="apsolu-images d-flex align-items-end flex-row-reverse">
            {{#section1_image_credits}}
                <span class="badge badge-photo-credits">
                    <i class="fa fa-camera" aria-hidden="true" alt="Crédit image de fond :"></i>
                    {{ section1_image_credits }}
                </span>
            {{/section1_image_credits}}
            <div id="textbox" style="border: 4px solid white; background-color: rgb(0, 0, 0, 0.6);"
                 class="mr-auto my-auto ml-5 p-3">
                <h2 style="color:white;" class="display-4">C'est la rentrée !</h2>
                <p style="color:white;">Les insciptions sont ouvertes pour le semestre 1, pensez à vous inscrire dès maintenant.</p>
            </div>
        </span>
        <article class="apsolu-article mb-0">
            <div class="container-md">
                {{{ section1_text }}}
            </div>
        </article>
    </section>

    {{! Section 2 : Formats de cours }}
    <section id="activites" class="apsolu-pages">
        <span id="section-2" class="apsolu-images d-flex align-items-end flex-row-reverse">
            {{#section2_image_credits}}
                <span class="badge badge-photo-credits">
                    <i class="fa fa-camera" aria-hidden="true" alt="Crédit image de fond :"></i>
                    {{ section2_image_credits }}
                </span>
            {{/section2_image_credits}}
        </span>
        <div class="apsolu-article-title">
            <div class="container">
                <h2 class="display-4"><i aria-hidden="true" class="fa fa-chevron-circle-down mr-3"></i>Formats de pratique</h2>
            </div>
        </div>
        <article class="apsolu-article">
            <div class="container-md">
                <div id="formats-cours">
                    {{! Onglets formats de cours. }}
                    <ul class="nav nav-tabs mb-2" role="tablist">
                        <li role="presentation" class="nav-item">
                            <a role="tab" aria-controls="liste-activites" aria-selected="false" class="nav-link active"
                               data-toggle="tab" href="#liste-activites" role="tab">
                                {{#str}}activities_list, theme_apsolu{{/str}}
                            </a>
                        </li>
                        {{# homepage_section2_training_text }}
                            <li role="presentation" class="nav-item">
                                <a role="tab" aria-controls="courses" aria-selected="false" class="nav-link" data-toggle="tab"
                                   href="#stages">Stages
                                </a>
                            </li>
                        {{/ homepage_section2_training_text }}
                        {{# homepage_section2_events_text }}
                            <li role="presentation" class="nav-item">
                                <a role="tab" aria-controls="courses" aria-selected="false" class="nav-link" data-toggle="tab"
                                   href="#evenements">Evenements
                                </a>
                            </li>
                        {{/ homepage_section2_events_text }}
                        {{# homepage_section2_animations_text }}
                            <li role="presentation" class="nav-item">
                                <a role="tab" aria-controls="courses" aria-selected="false" class="nav-link" data-toggle="tab"
                                   href="#animations">Animations
                                </a>
                            </li>
                        {{/ homepage_section2_animations_text }}
                        {{# homepage_section2_practice_text}}
                            <li role="presentation" class="nav-item">
                                <a role="tab" aria-controls="courses" aria-selected="false" class="nav-link" data-toggle="tab"
                                   href="#pratiques">Pratiques autonomes
                                </a>
                            </li>
                        {{/homepage_section2_practice_text}}
                        {{# homepage_section2_association_text }}
                            <li role="presentation" class="nav-item">
                                <a role="tab" aria-controls="courses" aria-selected="false" class="nav-link" data-toggle="tab"
                                   href="#adhesion">Adhésion à l'Association Sportive
                                </a>
                            </li>
                        {{/ homepage_section2_association_text }}
                    </ul>

                    {{! Contenu des onglets formats de cours. }}
                    <div class="tab-content">
                        {{! Section 2a : Activités. }}
                        {{>theme_apsolu/activities/activities-list}}
                        {{! TODO Section 2c : Stages. }}
                        {{>theme_apsolu/activities/sport-training-sessions}}
                        {{! TODO Section 2d : Evénements. }}
                        {{>theme_apsolu/activities/events}}
                        {{! TODO Section 2e : Animations. }}
                        {{>theme_apsolu/activities/animations}}
                        {{! TODO Section 2f : Pratiques autonomes. }}
                        {{>theme_apsolu/activities/practice}}
                        {{! TODO Section 2g : Adhésion à l'AS. }}
                        {{>theme_apsolu/activities/sport-association}}
                    </div>
                </div>
            </div>
        </article>

    </section>

    {{! Section 3 : S'inscrire. }}
    <section class="apsolu-pages" id="inscription">
        <span class="apsolu-images d-flex align-items-end flex-row-reverse" id="section-3">
            {{#section3_image_credits}}
                <span class="badge badge-photo-credits">
                    <i class="fa fa-camera" aria-hidden="true" alt="Crédit image de fond :"></i>
                    {{ section3_image_credits }}
                </span>
            {{/section3_image_credits}}
        </span>
        <div class="apsolu-article-title">
            <div class="container">
                <h2 class="display-4"><i aria-hidden="true" class="fa fa-chevron-circle-down mr-3"></i>{{#str}}
                    signup, theme_apsolu{{/str}}</h2>
            </div>
        </div>
        <article class="apsolu-article">
            <div class="container-md">
                <h2 class="sr-only">{{#str}}signup, theme_apsolu{{/str}}</h2>

                {{{ section3_text }}}

            </div>
        </article>

    </section>

    {{! Section 4 : Connexion. }}
    {{#login_link}}
        <section class="apsolu-pages" id="connexion">
            <article class="apsolu-article">
                <div class="container">
                    <div class="jumbotron">
                        <h2 class="display-4 text-center">Connexion à l'espace sport</h2>
                        <hr>
                        <ul class="apsolu-inscription row justify-content-md-center">
                            {{#institutional_account_url}}
                                <li class="col-md-4 col-md-offset-2">
                                    <a id="inscription" class="btn btn-success btn-lg" href="{{ institutional_account_url }}">
                                        <i class="fa fa-university" aria-hidden="true"></i>
                                        {{#str}}i_have_an_institutional_account, theme_apsolu{{/str}}
                                    </a>
                                </li>
                            {{/institutional_account_url}}
                            {{#non_institutional_account_url}}
                                <li class="col-md-4">
                                    <a id="connexion" class="btn btn-default btn-secondary btn-lg"
                                       href="{{ non_institutional_account_url }}#internal">
                                        {{#str}}i_have_not_an_institutional_account, theme_apsolu{{/str}}
                                    </a>
                                </li>
                            {{/non_institutional_account_url}}
                        </ul>
                    </div>
                </div>
            </article>
        </section>
    {{/login_link}}
    {{! TODO Pied de page }}
    {{>theme_apsolu/components/footer}}

</div>

